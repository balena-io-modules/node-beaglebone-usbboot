{
	"compilerOptions": {
		"typeRoots": ["typings", "node_modules/@types"],
		"module": "commonjs",
		"outDir": "build",
		"sourceMap": true,
		"declaration": true,
		"target": "es6",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true
	},
	"include": [
		"lib/*"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}